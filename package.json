{
  "name": "mauijay-shieldtailwindcss",
  "version": "0.4.0",
  "description": "CodeIgniter4 starter template with Shield Auth, Vite, Tailwind",
  "keywords": [
    "tailwindcss",
    "codeigniter4",
    "vite",
    "daisyui"
  ],
  "author": "jay",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^5.5.3",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass": "^1.94.0",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "test": "composer run test",
    "test:unit": "composer run test:unit",
    "test:database": "composer run test:database",
    "test:session": "composer run test:session",
    "test:coverage": "composer run test:coverage",
    "test:coverage-text": "composer run test:coverage-text",
    "test:js": "echo \"No JavaScript tests configured yet\"",
    "test:php": "composer run test",
    "ci": "composer run ci",
    "cs": "composer run cs",
    "cs-fix": "composer run cs-fix",
    "stan": "composer run stan",
    "stan:level2": "composer run stan:level2",
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "format": "npm run prettier:fix && composer run cs-fix",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "sync-version": "node scripts/sync-version.js",
    "bump:patch": "npm version patch && npm run sync-version && composer bump-version",
    "bump:minor": "npm version minor && npm run sync-version && composer bump-version",
    "bump:major": "npm version major && npm run sync-version && composer bump-version",
    "version": "npm run sync-version && git add composer.json",
    "postversion": "git push && git push --tags"
  }
}
