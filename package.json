{
  "name": "ci4-shield-tailwinds",
  "version": "0.2.9",
  "description": "Codeigniter4 starter kit for new projects.",
  "keywords": [
    "tailwindcss",
    "codeigniter4",
    "vite",
    "daisyui"
  ],
  "author": "jay",
  "private": true,
  "type": "module",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^5.1.23",
    "postcss": "^8.5.6",
    "postcss-advanced-variables": "^5.0.0",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.0.3",
    "workbox-build": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:css": "npx @tailwindcss/cli -i ./src/assets/css/app.css -o ./public/assets/css/styles.css --watch",
    "admin:css": "npx @tailwindcss/cli -i ./src/assets/css/admin.css -o ./public/assets/css/admin.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/assets/css/app.css -o ./public/assets/css/styles.min.css -m",
    "dev": "vite",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "serve": "vite preview",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "php-cs": ".\\vendor\\bin\\php-cs-fixer fix --ansi --verbose --dry-run --diff --allow-risky=yes",
    "php-cs-fix": ".\\vendor\\bin\\php-cs-fixer fix --verbose --ansi --using-cache=no --diff --allow-risky=yes",
    "format": "npm run prettier:fix && npm run php-cs-fix",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version:patch": "npm version patch && npm run changelog",
    "version:minor": "npm version minor && npm run changelog",
    "version:major": "npm version major && npm run changelog"
  }
}
