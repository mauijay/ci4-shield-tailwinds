{
  "name": "mauijay/shieldtailwindcss",
  "version": "0.3.5",
  "description": "CodeIgniter4 starter template with Shield Auth, Vite, Tailwind",
  "keywords": [
    "tailwindcss",
    "codeigniter4",
    "vite",
    "daisyui"
  ],
  "author": "jay",
  "private": true,
  "type": "module",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^5.1.26",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "test": "composer run test",
    "test:unit": "composer run test:unit",
    "test:database": "composer run test:database",
    "test:session": "composer run test:session",
    "test:coverage": "composer run test:coverage",
    "test:coverage-text": "composer run test:coverage-text",
    "test:js": "echo \"No JavaScript tests configured yet\"",
    "test:php": "composer run test",
    "ci": "composer run ci",
    "cs": "composer run cs",
    "cs-fix": "composer run cs-fix",
    "stan": "composer run stan",
    "stan:level2": "composer run stan:level2",
    "start:css": "npx @tailwindcss/cli -i ./src/assets/css/app.css -o ./public/assets/css/styles.css --watch",
    "admin:css": "npx @tailwindcss/cli -i ./src/assets/css/admin.css -o ./public/assets/css/admin.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/assets/css/app.css -o ./public/assets/css/styles.min.css -m",
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "format": "npm run prettier:fix && composer run cs-fix",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "sync-version": "node scripts/sync-version.js",
    "version:patch": "npm version patch && npm run sync-version",
    "version:minor": "npm version minor && npm run sync-version",
    "version:major": "npm version major && npm run sync-version",
    "postversion": "git add composer.json .env.example && git commit --amend --no-edit && git push && git push --tags"
  }
}
