{
  "name": "mauijay/shieldtailwindcss",
  "description": "CodeIgniter4 starter template with Shield Auth, Vite, Tailwind",
  "license": "MIT",
  "type": "project",
  "version": "0.3.1",
  "require": {
    "php": "^8.2 || ^8.4",
    "codeigniter4/framework": "^4.6",
    "codeigniter4/shield": "^1.2",
    "codeigniter4/queue": "dev-develop",
    "codeigniter4/tasks": "dev-develop",
    "datamweb/shield-oauth": "dev-develop",
    "firebase/php-jwt": "^6.11"
  },
  "require-dev": {
    "codeigniter/phpstan-codeigniter": "^1.5.4",
    "fakerphp/faker": "^1.24",
    "friendsofphp/php-cs-fixer": "^3.88",
    "mikey179/vfsstream": "^1.6",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^10.5.43"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config/"
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "discard-changes": true,
    "disable-tls": true,
    "secure-http": false,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "bump-version": [
      "@php -r \"$package = json_decode(file_get_contents('package.json'), true); $composer = json_decode(file_get_contents('composer.json'), true); $composer['version'] = $package['version']; file_put_contents('composer.json', json_encode($composer, JSON_PRETTY_PRINT | JSON_UNESCAPED_SLASHES));\""
    ],
    "ci": [
      "@cs",
      "@test",
      "@stan"
    ],
    "stan": "phpstan analyse",
    "stan:level2": "phpstan analyse --level=2",
    "cs": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
    "cs-fix": "php-cs-fixer fix --verbose --ansi --allow-risky=yes",
    "dev:8081": "php spark serve --port 8081"
  }
}
