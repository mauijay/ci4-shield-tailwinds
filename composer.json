{
  "name": "mauijay/shieldtailwindcss",
  "description": "CodeIgniter4 starter template with Shield Auth, Vite, Tailwind",
  "license": "MIT",
  "type": "project",
  "version": "0.4.0",
  "require": {
    "php": "^8.4",
    "codeigniter4/framework": "^4.6",
    "codeigniter4/queue": "dev-develop@dev",
    "codeigniter4/shield": "^1.2",
    "datamweb/shield-oauth": "dev-develop@dev",
    "firebase/php-jwt": "^7.0.2"
  },
  "require-dev": {
    "codeigniter/phpstan-codeigniter": "^1.3",
    "fakerphp/faker": "^1.24",
    "friendsofphp/php-cs-fixer": "^3.92.5",
    "mikey179/vfsstream": "^1.6",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1.33",
    "phpunit/phpunit": "^10.5.43"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config/"
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support/"
    }
  },
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "platform-check": true
  },
  "scripts": {
    "bump-version": "node scripts/sync-version.js",
    "ci": [
      "@cs",
      "@stan:ci",
      "@test:ci"
    ],
    "cs": "vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes",
    "cs-fix": "vendor/bin/php-cs-fixer fix --verbose --ansi --using-cache=no --diff --allow-risky=yes",
    "stan": "vendor/bin/phpstan analyse",
    "stan:ci": "vendor/bin/phpstan analyse --error-format=github",
    "stan:level2": "vendor/bin/phpstan analyse --level=2",
    "test": "vendor/bin/phpunit --no-coverage",
    "test:ci": "vendor/bin/phpunit --no-coverage --log-junit=build/logs/junit.xml",
    "test:unit": "vendor/bin/phpunit --testsuite=Unit --no-coverage",
    "test:database": "vendor/bin/phpunit --testsuite=Database --no-coverage",
    "test:session": "vendor/bin/phpunit --testsuite=Session --no-coverage",
    "test:coverage": "vendor/bin/phpunit --coverage-html=build/coverage",
    "test:coverage-text": "vendor/bin/phpunit --coverage-text",
    "test:no-coverage": "vendor/bin/phpunit --no-coverage"
  }
}
