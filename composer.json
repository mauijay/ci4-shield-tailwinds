{
  "name": "mauijay/shieldtailwindcss",
  "description": "CodeIgniter4 starter template with Shield Auth, Vite, Tailwind",
  "license": "MIT",
  "type": "project",
  "version": "0.2.5",
  "require": {
    "php": "^8.2",
    "codeigniter4/framework": "^4.6",
    "codeigniter4/shield": "^1.2",
    "codeigniter4/queue": "dev-develop",
    "codeigniter4/tasks": "dev-develop",
    "firebase/php-jwt": "^6.11"
  },
  "require-dev": {
    "codeigniter/phpstan-codeigniter": "^1.4.3",    
    "rector/rector": "^2.1",
    "fakerphp/faker": "^1.24",
    "friendsofphp/php-cs-fixer": "^3.86",
    "mikey179/vfsstream": "^1.6",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "*",
    "phpunit/phpunit": "^10.5.43"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config/"
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "ci": [
      "Composer\\Config::disableProcessTimeout",
      "@cs",
      "@test"
    ],
    "cs": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
    "cs-fix": "php-cs-fixer fix --verbose --ansi --using-cache=no --diff",
    "dev:8081": "php spark serve --port 8081",
    "stan": "vendor/bin/phpstan analyse app tests",
    "phpstan": "vendor/bin/phpstan analyse --ansi",
    "rector": "rector process --dry-run",
    "rector-fix": "rector process",
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "vendor/bin/phpunit"
    ],
    "test:no-coverage": "vendor/bin/phpunit --no-coverage",
    "post-update-cmd": [
      "@composer dump-autoload"
    ]
  }
}
