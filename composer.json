{
  "name": "mauijay/shieldtailwindcss",
  "description": "CodeIgniter4 starter template with Shield Auth, Vite, Tailwind",
  "license": "MIT",
  "type": "project",
  "version": "0.2.7",
  "require": {
    "php": "^8.2 || ^8.4",
    "codeigniter4/framework": "^4.6",
    "codeigniter4/shield": "^1.2",
    "codeigniter4/queue": "dev-develop",
    "codeigniter4/tasks": "dev-develop",
    "firebase/php-jwt": "^6.11"
  },
  "require-dev": {
    "codeigniter/phpstan-codeigniter": "^1.5.4",
    "fakerphp/faker": "^1.24",
    "friendsofphp/php-cs-fixer": "^3.88",
    "mikey179/vfsstream": "^1.6",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^10.5.43"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config/"
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "discard-changes": true,
    "cafile": "./cacert.pem",
    "secure-http": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "ci": [
      "Composer\\Config::disableProcessTimeout",
      "@cs",
      "@test:no-coverage",
      "@stan"
    ],
    "stan": ".\\vendor\\bin\\phpstan analyse app tests --level=5",
    "cs": ".\\vendor\\bin\\php-cs-fixer fix --dry-run --diff --verbose --allow-risky=yes",
    "cs-fix": ".\\vendor\\bin\\php-cs-fixer fix --verbose --ansi --using-cache=no --diff --allow-risky=yes",
    "test": ".\\vendor\\bin\\phpunit --no-coverage",
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      ".\\vendor\\bin\\phpunit"
    ],
    "dev:8081": "php spark serve --port 8081",
    "test:no-coverage": ".\\vendor\\bin\\phpunit --no-coverage",
    "post-update-cmd": [
      "@composer dump-autoload"
    ]
  }
}
